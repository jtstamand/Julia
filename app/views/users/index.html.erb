<div class="jumbotron">

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if admin_signed_in? %>
<table>
  <thead>
    <tr>
      <th>First Name |</th>
      <th>Last Name |</th>
      <th>Email</th>
      <th>| User ID</th>
      <th colspan="20"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.email %></td>
        <td><%= user.id%></td>
        <td><%= link_to 'Show |', user %></td>
        <th colspan="20"></th>
        <td><%= link_to 'Edit |', edit_user_path(user) %></td>
        <th colspan="20"></th>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-lg' %>

<% end %>
</div>

